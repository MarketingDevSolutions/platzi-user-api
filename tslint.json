{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "exceptions": [
                    "-",
                    "+"
                ]
            }
        ],
        "no-eval": false,
        "no-var-requires": true,
        "prefer-const": true,
        "member-ordering":  [
            true,
            {
              "order": [
                "public-static-field",
                "public-instance-field",
                "public-constructor",
                "private-static-field",
                "private-instance-field",
                "private-constructor",
                "public-instance-method",
                "protected-instance-method",
                "private-instance-method"
              ],
              "alphabetize": true
            }
          ]
    },
    "rulesDirectory": []
}